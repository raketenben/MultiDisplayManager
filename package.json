{
    "name": "multi-display-manager",
    "author": {
        "name": "Ben Ehrengruber",
        "email": "benehgj@gmail.com"
    },
    "private": true,
    "engines": {
        "node": ">=v14.16",
        "npm": ">=7.7"
    },
    "main": "packages/main/dist/index.cjs",
    "scripts": {
        "build": "node scripts/build.js",
        "precompile": "cross-env MODE=production npm run build",
        "compile": "electron-builder build --config electron-builder.config.js --dir --config.asar=false",
        "pretest": "npm run build",
        "test": "node tests/app.spec.js",
        "watch": "node scripts/watch.js",
        "lint": "eslint . --ext js,ts,vue",
        "typecheck-main": "tsc --noEmit -p packages/main/tsconfig.json",
        "typecheck-preload": "tsc --noEmit -p packages/preload/tsconfig.json",
        "typecheck-renderer": "vue-tsc --noEmit -p packages/renderer/tsconfig.json",
        "typecheck": "npm run typecheck-main && npm run typecheck-preload && npm run typecheck-renderer"
    },
    "browserslist": [
        "Chrome 94"
    ],
    "simple-git-hooks": {
        "pre-commit": "npx lint-staged",
        "pre-push": "npm run typecheck"
    },
    "lint-staged": {
        "*.{js,ts,vue}": "eslint --cache --fix"
    },
    "devDependencies": {
        "@types/electron-devtools-installer": "2.2.0",
        "@types/multiparty": "0.0.33",
        "@types/node-forge": "^0.10.10",
        "@types/randomstring": "^1.1.8",
        "@typescript-eslint/eslint-plugin": "4.32.0",
        "@typescript-eslint/parser": "^4.32.0",
        "@vitejs/plugin-vue": "1.9.2",
        "@vue/eslint-config-typescript": "^7.0.0",
        "cross-env": "7.0.3",
        "electron": "15.1.0",
        "electron-builder": "22.11.7",
        "electron-devtools-installer": "3.2.0",
        "eslint": "7.32.0",
        "eslint-plugin-vue": "7.18.0",
        "lint-staged": "11.2.0",
        "npm-run-all": "^4.1.5",
        "playwright": "1.15.1",
        "sass": "^1.42.1",
        "simple-git-hooks": "2.6.1",
        "typescript": "^4.4.2",
        "vite": "2.6.2",
        "vue-tsc": "0.3.0"
    },
    "dependencies": {
        "@types/bonjour": "^3.5.9",
        "@types/bootstrap": "^5.1.7",
        "@types/express": "^4.17.13",
        "@types/mime-types": "^2.1.1",
        "@types/udp-discovery": "^2.0.1",
        "bonjour": "^3.5.0",
        "bootstrap": "^5.1.1",
        "bootstrap-icons": "^1.7.2",
        "crc": "^4.1.0",
        "electron-store": "^8.0.1",
        "electron-updater": "4.6.0",
        "express": "^4.17.1",
        "form-data": "^4.0.0",
        "http": "0.0.1-security",
        "mime-types": "^2.1.34",
        "multiparty": "^4.2.2",
        "node-forge": "^1.2.0",
        "randomstring": "^1.2.1",
        "socket.io": "^4.2.0",
        "socket.io-client": "^4.2.0",
        "vite-plugin-ssr": "^0.3.7",
        "vue": "3.2.19",
        "vue-file-input": "^1.0.2",
        "vue-router": "4.0.11",
        "vuedraggable": "^4.1.0"
    },
    "optionalDependencies": {
        "iconv-corefoundation": "^1.1.7"
    }
}